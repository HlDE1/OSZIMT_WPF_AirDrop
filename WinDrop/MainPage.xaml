<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WinDrop.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="wdlogo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="WinDrop Logo" />


            <Button
                x:Name="FileSendBtn"
                Text="Send Files" 
                SemanticProperties.Hint="Sends the selected files to the selected Device"
                Clicked="OnSendClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
